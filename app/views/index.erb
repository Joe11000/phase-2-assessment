<div class="container">

  <h3>Sign Up</h3>
  <form action='/signup' method='post'>
    <input type="text"      name="signup[first_name]"            value="first"         placeholder="first_name"><br>
    <input type="text"      name="signup[last_name]"             value="last"          placeholder="last_name"><br>
    <input type="text"      name="signup[email]"                 value="me@me.com"     placeholder="email"><br>
